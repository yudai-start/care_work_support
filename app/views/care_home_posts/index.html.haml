%ul.care_home_post_index
  - @care_home_posts.each do |care_home_post|
    %li
      = image_tag care_home_post.image.url
      = care_home_post.created_at.strftime("%Y/%m/%d(%a)")
      - if care_home_post.message?
        = care_home_post.message

.input-box
  = form_with(model: @care_home_post, url: care_home_posts_path, method: :post, local: true) do |f|
    = f.text_field :message, class: "input-box__text", placeholder: ' type a message'
    = f.label :image, class: 'input-box__image' do
      = f.file_field :image, class: 'hidden'
    = f.submit 'Send', class: "input-box__submit"