.messages
  = render partial: 'family_post', collection: @family_posts

.input-box
  = form_with(model: @family_post, url: family_posts_path, method: :post, id: "family_post", local: true) do |f|
    = f.text_field :message, class: "input-box__text", placeholder: ' type a message'
    = f.label :image, class: 'input-box__image' do
      = f.file_field :image, class: 'hidden'
    = f.submit 'Send', class: "input-box__submit"