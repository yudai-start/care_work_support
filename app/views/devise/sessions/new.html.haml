.session_main
  .session_bg
  .session_form
    .session_form__inner
      %h2 ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .session_form__inner__email
          = f.label :"email"
          %br/
          = f.email_field :email, autocomplete: "email"
        .session_form__inner__password
          = f.label :"password"
          %br/
          = f.password_field :password, autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .session_form__inner__remember
            = f.check_box :remember_me
            = f.label :remember_me
        = render "devise/shared/links"
        = f.submit "ログインする", class: "session_form__inner__submit"
 